{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noLib": false,
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "lib": ["es2017"],
    "target": "es2017"
  },
  "compileOnSave": true
}