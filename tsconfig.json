{
  "compilerOptions": {
    "declaration": true,
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noLib": false,
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "lib": ["ES2022"]
  },
  "exclude": ["./src/__tests__"],
  "compileOnSave": true
}