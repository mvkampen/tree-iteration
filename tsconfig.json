{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noLib": false,
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "lib": ["ES2022"],
    "target": "es2022"
  },
  "exclude": ["./src/__tests__/**/*.test.ts"],
  "compileOnSave": true
}